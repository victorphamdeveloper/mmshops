
<h1>Chat</h1>

<ul id="chat">
  <%= render @messages %>
</ul>

<%= form_for Message.new(receiver_id: params[:receiver_id],sender_id: current_user.id), remote: true do |f| %>
  <%= f.hidden_field :sender_id %>
  <%= f.hidden_field :receiver_id %>

  <%= f.text_field :content %>
  <%= f.submit "Send" %>
<% end %>

<%= subscribe_to "/messages/new" %>
