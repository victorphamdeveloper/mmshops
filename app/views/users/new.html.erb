<% provide(:title, "Sign up") %>

<div class="row">
	<div class="span8 offset1 input-form">
		<h1>Sign up</h1>
		<%= form_for(@user) do |f| %>
		<%= render 'shared/error_messages' %>

			<%= f.label :name %>
			<%= f.text_field :name %>

			<%= f.label :email %>
			<%= f.text_field :email %>

			<%= f.label :password %>
			<%= f.text_field :password %>			

			<%= f.label :password_confirmation, "Confirmation" %>
			<%= f.password_field :password_confirmation %>

			<%= f.label :role, "Account type" %>
			
	    	<%= select("user", "role", [["seller",2],["buyer",3]], html_options: {:class => "select-box"} ) %>
	    	
			<br />

			<br/>

			<%= f.submit "Create my account", class: "btn btn-large btn-primary signup-button" %>
		<% end %>
	</div>
</div>



