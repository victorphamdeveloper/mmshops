<% provide(:title, "Sign up") %>

<div class="row">
	<div class="span8 offset1 signup">
		<h1>Sign up</h1>
		<%= form_for(@user) do |f| %>

			<%= f.label :name %>
			<%= f.text_field :name %>

			<%= f.label :email %>
			<%= f.text_field :email %>

			<%= f.label :password %>
			<%= f.text_field :password %>			

			<%= f.label :password_confirmation, "Confirmation" %>
			<%= f.password_field :password_confirmation %>
			
			<br/>

			<%= select_tag(:role, options_for_select([['Buyer',3],['Seller',2]],3)) %>
			
			<br/>

			<%= f.submit "Create my account", class: "btn btn-large btn-primary signup-button" %>
		<% end %>
	</div>
</div>



