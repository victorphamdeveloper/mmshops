<tr>
	
	<td><%= link_to user.name, user %></td> 
	<td><%= user.email %></td>

	<% if is_admin(current_user) %>
		<td>
		<% if user.ban == 0 %>
		<%= link_to "Ban", ban_path(user), method: :put, :controller => :users, :action => :ban, data: { confirm: "You sure?" } %>
		<% elsif user.ban == 1 %>
		<%= link_to "Unban", ban_path(user), method: :put, :controller => :users, :action => :ban, data: { confirm: "You sure?" } %>
		<% end %>
		</td>
		<td>
		<%= link_to "Delete", user, method: :delete, data: { confirm: "You sure?" } %>
		</td>
		<td>
			<div class="btn-group">
  			<button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
    		Seller level <span class="caret"></span>
  			</button>
  			
  			<ul class="dropdown-menu" role="menu">
    			<li><%= link_to "normal", upgrade_path(user, level: "normal"), method: :put %></li>
    			<li><%= link_to "premium", upgrade_path(user, level: "premium"), method: :put %></li>
    			<li><%= link_to "elite", upgrade_path(user, level: "elite"), method: :put %></li>
  			</ul>
			</div>
		</td>
	<% end %> 
</tr>