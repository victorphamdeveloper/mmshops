<h1>Listing banned products</h1>

<table class="table">
  <tr>
    <th>Product name</th>
    <th>Seller</th>
    <th>Unban</th>
  </tr>
  <% @products.each do |p| %>
  <tr>
    <td><%= p.name %></td>
    <td><%= p.user.name %></td>
    <td><%= link_to "Unban", product_ban_path(p), method: :put %></td>
  </tr>
  <% end %>
</table>

