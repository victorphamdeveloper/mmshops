<% provide(:title, 'All users') %> 
<h1>Listing products</h1>

<div class="btn-group">
  <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
    Sort by <span class="caret"></span>
  </button>
  <ul class="dropdown-menu" role="menu">
  	<li><%= link_to "From high to low price", products_path(sort_by: "price_high_low") %></li>
  	<li><%= link_to "From low to high price", products_path(sort_by: "price_low_high") %></li>
    <li><%= link_to "Recently added", products_path(sort_by: "created_at") %></li>
    <li><%= link_to "Numer of likes", products_path(sort_by: "no_of_likes") %></li>
    
  </ul>
</div>

<%= will_paginate %>

<div class="products-wrapper">
<% @products.each do |product| %>
	<div class="product-wrapper">
		<div class="product-img">
	  	<%= link_to product do %>
	    	<%= image_tag product.avatar.url(:medium) %>
	  	<% end %>
		</div>
	   
	  <div class="product-desc">
	    <span><%= product.name %></span>
	    <div ><span><%= number_to_currency(product.price) %></span></div>
	  </div>
	</div>
<% end %>
</div>
<div class="clear"></div>

<%= will_paginate %>

