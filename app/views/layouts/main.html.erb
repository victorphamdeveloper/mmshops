<div class="row">
      <%= render 'layouts/sidebar' unless @skip_sidebar %>
        
      <div class="span9">
        <% flash.each do |key, value| %>
          <!--<div class="alert alert-<%= key %>"><%= value %></div>-->
          <%= content_tag(:div, value, class: "alert alert-#{key}") %>
        <% end %>
        <%= yield %>
      </div>
    </div>
      
    <%= render 'layouts/footer' %>