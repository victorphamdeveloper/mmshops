<h1>Listing orders</h1>

<table class="table">
  <tr>
    <th>Sell Product</th>
    <th>Customer</th>
    <th>Status</th>
    <th>Quantity</th>
    <th>Price</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @sell_line_items.each do |line_item| %>
  <tr>
    <td><%= link_to Product.find(line_item.product_id).name, product_path(line_item.product_id) %></td>
    <td><%= link_to User.find(line_item.buyer_id).name, user_path(line_item.buyer_id) %></td>
    <td><%= line_item.status %></td>
    <td><%= line_item.quantity %></td>
    <td><%= number_to_currency(line_item.total_price) %></td>
    <td><%= link_to 'View', line_item %></td>
    <td><%= link_to 'Update status', edit_line_item_path(line_item) %></td>
    <td><%= link_to 'Message buyer', messages_path(receiver_id: line_item.buyer_id) %></td>
  </tr>
<% end %>
</table>


<table class="table">
  <tr>
    <th>Ordered Product</th>
    <th>Seller</th>
    <th>Status</th>
    <th>Quantity</th>
    <th>Price</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @buy_line_items.each do |line_item| %>
  <tr>
    <td><%= link_to Product.find(line_item.product_id).name, product_path(line_item.product_id) %></td>
    <td><%= link_to User.find(line_item.seller_id).name, user_path(line_item.seller_id) %></td>
    <td><%= line_item.status %></td>
    <td><%= line_item.quantity %></td>
    <td><%= number_to_currency(line_item.total_price) %></td>
    <td><%= link_to 'View', line_item %></td>
  </tr>
<% end %>
</table>

